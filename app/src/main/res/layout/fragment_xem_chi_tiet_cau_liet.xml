<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutXemChiTietCauLiet"
    tools:context=".user.FragmentXemChiTietCauLiet">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtXemChiTietCauLiet_CauHoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textStyle="bold"
        android:padding="50dp"
        android:text="CAU HOI" />

    <ImageButton
        android:id="@+id/imgXemChiTietCauLietBAO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hinh39" />

    <RadioGroup
        android:id="@+id/rdoDapAnXemChiTietCauLietGROUP"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rdoDapAnXemChiTietCauLietA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp"
            android:text="DAP AN A" />

        <RadioButton
            android:id="@+id/rdoDapAnXemChiTietCauLietB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp"
            android:text="DAP AN B" />

        <RadioButton
            android:id="@+id/rdoDapAnXemChiTietCauLietC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp"
            android:text="DAP AN C" />

        <RadioButton
            android:id="@+id/rdoDapAnXemChiTietCauLietD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp"
            android:text="DAP AN D" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSaiXemChiTietCauLiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtDungXemChiTietCauLiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt3XemChiTietCauLiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12pt"
            android:textColor="#339900" />

        <TextView
            android:id="@+id/txtGiathichXemChiTietCauLiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>